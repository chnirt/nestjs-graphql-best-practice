{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"noLib": false,
		"noImplicitAny": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"@auth/*": ["src/auth/*"],
			"@utils/*": ["src/shared/*"],
			"@models/*": ["src/models/*"],
			"@environments/*": ["src/environments/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"assets",
		"**/*.(spec|test).ts",
		"**/*.e2e-spec.ts",
		"**/graphql.schema.ts"
	]
}
