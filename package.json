{
	"name": "Chnirt-NestJs-Backend",
	"version": "0.0.1",
	"description": "",
	"author": "Chnirt",
	"license": "MIT",
	"scripts": {
		"build": "tsc -p tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "concurrently --handle-input \"wait-on dist/main.js && SECRET_KEY='chnirt1803' nodemon\" \"tsc -w -p tsconfig.build.json\" ",
		"start:debug": "nodemon --config nodemon-debug.json",
		"prestart:prod": "rimraf dist && yarn build",
		"start:prod": "NODE_ENV=production SECRET_KEY='chnirt1803' node -r ./tsconfig-paths-bootstrap.js dist/main.js",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "SECRET_KEY='chnirt1803' NODE_ENV=testing jest",
		"test:watch": "NODE_ENV=testing jest --watch",
		"test:cov": "NODE_ENV=testing jest --coverage",
		"test:debug": "NODE_ENV=testing node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "NODE_ENV=testing jest --config ./test/jest-e2e.json",
		"webpack": "rimraf dist && webpack --config webpack.config.js",
		"start:hmr": "SECRET_KEY='chnirt1803' node dist/main.js",
		"gen": "ts-node src/generate-typings.ts",
		"db:seed": "ts-node src/dbseed.ts",
		"compodoc": "npx compodoc --port 11045 -p tsconfig.json -s",
		"heroku-postbuild": "npm i --only=dev --no-shrinkwrap && yarn build"
	},
	"dependencies": {
		"@nestjs/common": "^6.7.1",
		"@nestjs/core": "^6.7.1",
		"@nestjs/graphql": "^6.5.1",
		"@nestjs/platform-express": "^6.7.1",
		"@nestjs/typeorm": "^6.1.3",
		"apollo-server-cache-memcached": "^0.6.3",
		"apollo-server-express": "^2.9.3",
		"bcrypt": "^3.0.6",
		"cache-manager": "^2.10.0",
		"class-transformer": "^0.2.3",
		"cloudinary": "^1.15.0",
		"compression": "^1.7.4",
		"csurf": "^1.10.0",
		"dateformat": "^3.0.3",
		"dotenv": "^8.1.0",
		"express-rate-limit": "^5.0.0",
		"fs": "0.0.1-security",
		"graphql": "^14.5.6",
		"graphql-rate-limit": "^2.0.1",
		"graphql-tools": "^4.0.5",
		"graphql-type-json": "^0.3.0",
		"graphql-voyager": "^1.0.0-rc.28",
		"handlebars": "^4.2.0",
		"helmet": "^3.21.0",
		"ioredis": "^4.14.1",
		"jsonwebtoken": "^8.5.1",
		"mongodb": "^3.3.2",
		"morgan": "^1.9.1",
		"multer": "^1.4.2",
		"nest-winston": "^1.1.2",
		"nodemailer": "^6.3.0",
		"nodemailer-express-handlebars": "^3.1.0",
		"reflect-metadata": "^0.1.12",
		"rimraf": "^3.0.0",
		"rxjs": "^6.5.3",
		"typeorm": "^0.2.19",
		"uuid": "^3.3.3",
		"webpack-bundle-analyzer": "^3.5.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@compodoc/compodoc": "^1.1.10",
		"@nestjs/testing": "^6.7.1",
		"@types/express": "^4.17.1",
		"@types/jest": "^24.0.18",
		"@types/node": "^12.7.5",
		"@types/nodemailer": "^6.2.1",
		"@types/supertest": "^2.0.7",
		"concurrently": "^4.1.2",
		"husky": "^3.0.5",
		"jest": "^24.9.0",
		"lint-staged": "^9.3.0",
		"nodemon": "^1.19.2",
		"prettier": "^1.15.3",
		"progress-bar-webpack-plugin": "^1.12.1",
		"supertest": "^4.0.2",
		"ts-jest": "^24.1.0",
		"ts-loader": "^6.1.0",
		"ts-node": "^8.4.1",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^5.20.0",
		"typescript": "^3.6.3",
		"wait-on": "^3.2.0",
		"webpack": "^4.40.2",
		"webpack-cli": "^3.3.9",
		"webpack-node-externals": "^1.7.2",
		"yarn": "^1.17.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"lint-staged": {
		"./src/**/*.{ts,json}": [
			"npm run format",
			"npm run lint",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
